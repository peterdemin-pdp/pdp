{% extends "_section.njk" %}

{% block section %}
  {% for section in collections.pricing_info %}
    <h2 class="font-bold tracking-widest text-4xl pb-4 text-blue-900">{{ section.data.title }}</h2>
    <div class="text-xl [&_p]:pb-2">
      {{ section.templateContent | safe }}
    </div>
  {% endfor %}
  <div class="pt-5 text-lg flex flex-col flex-stretch gap-5 w-full md:flex-row">
  {% for section in collections.pricing | sortBy('payment') %}
    <div class="flex flex-col py-8 px-4 bg-blue-900 text-white rounded shadow-lg shadow-blue-900">
      <h1 class="text-center py-10">
        <span class="text-5xl">{{ section.data.payment }}</span> / month
      </h1>
      <div class="ml-4 [&>ul]:list-disc [&_strong]:text-xl">
        {{ section.templateContent | safe }}
      </div>
    </div>
  {% endfor %}
  </div>
{% endblock %}
